{
  "name": "fruit-tools",
  "version": "1.0.0",
  "description": "水果工具应用",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win --x64 --config.win.target=portable --config.win.signAndEditExecutable=false",
    "build:mac": "electron-builder --mac"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@electron/remote": "^2.1.1",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.fruit.tools",
    "productName": "水果工具",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "portable",
      "icon": "build/icon.ico",
      "artifactName": "${productName}-${version}.exe",
      "signAndEditExecutable": false
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "build/icon.icns"
    },
    "asar": false,
    "removePackageScripts": true,
    "removePackageKeywords": true
  },
  "electronDownload": {
    "mirror": "https://npmmirror.com/mirrors/electron/"
  }
}
